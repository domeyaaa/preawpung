<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_Product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#1DFFCC79"
        android:scaleType="fitCenter"
        android:src="@drawable/product1" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_Product"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="รหัสสินค้า x"
        android:textColor="#826c5f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_id"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="xxxxx"
        android:textColor="#826c5f"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="1200฿"
        android:textColor="#ffcc79"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="รายละเอียดเพิ่มเติม"
        android:textColor="#826c5f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_desstock"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:paddingLeft="30dp"
        android:text="คลัง"
        android:textColor="#826c5f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:layout_toRightOf="@id/product_desstock"
        android:paddingRight="30dp"
        android:text="xx"
        android:textColor="#826c5f"
        android:textSize="20sp" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/product_descriptionplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textColor="#826c5f"
        android:text="รายละเอียดสินค้า"
        android:layout_below="@id/product_desstock"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_plus"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/product_descriptionplus"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:scrollbars="vertical"
        android:text="xxxxxxxxxx\nxxxxxxxxxxx\nxxxxxxxxxx"
        android:textColor="#826c5f"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addProductBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="เพิ่มไปยังตะกร้า"
        android:layout_alignParentBottom="true">
    </androidx.appcompat.widget.AppCompatButton>


</RelativeLayout>
