<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_icon" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="รายละเอียดคำสั่งซื้อ"
        android:textSize="25dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.85dp"
        android:layout_below="@id/back"
        android:background="#fff" />

    <TextView
        android:id="@+id/addressHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="ที่อยู่สำหรับจัดส่ง"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressHeader"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:text="xxxxxxxxxxxxxx" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.85dp"
        android:layout_below="@id/address"
        android:background="#fff" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderDetailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.85dp"
        android:layout_below="@id/orderDetailView"
        android:layout_marginTop="10dp"
        android:background="#fff" />

    <TextView
        android:id="@+id/product_pricemixhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="รวมการสั่งซื้อ"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_pricemix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/product_pricemixhead"
        android:text="xxxx"
        android:textAlignment="textEnd"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/product_pricesendhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_pricemix"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="ค่าจัดส่ง"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_pricesend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_pricemix"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="฿50"
        android:textAlignment="textEnd"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/product_priceallhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_pricesend"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="ยอดชำระเงินทั้งหมด"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_priceall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_pricesend"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="xxxxx"
        android:textAlignment="textEnd"
        android:textColor="#ffcc79"
        android:textSize="16dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="0.85dp"
        android:layout_below="@id/product_priceall"
        android:layout_marginTop="20dp"
        android:background="#fff" />

    <TextView
        android:id="@+id/product_nohead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="หมายเลขคำสั่งซื้อ"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="xxxx"
        android:textAlignment="textEnd"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/product_timehead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_no"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="เวลาที่สั่งซื้อ"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_no"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="xxxx"
        android:textAlignment="textEnd"
        android:textSize="16dp" />
<!--    <TextView-->
<!--        android:id="@+id/product_status"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="ยังไม่ชำระ"-->
<!--        android:layout_below="@id/product_time"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="30dp"-->
<!--        android:textSize="20dp"-->
<!--        android:textStyle="bold"-->
<!--        />-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCancel"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_btn"
        android:text="ชำระเงิน"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/orderSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPayment"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_btn"
        android:text="ตรวจสอบและยอมรับสินค้า"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCancel"
        android:layout_centerHorizontal="true"
        android:text=""
        android:paddingBottom="30dp"
        android:textColor="#ffcc79"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/reg_btn"
        android:text="ยกเลิกคำสั่งซื้อ"
        android:textColor="#ffcc79"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>