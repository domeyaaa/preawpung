<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCartCard"
    >

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star Crystal necklace"
        android:textColor="#826c5f"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/delete"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="ลบ"
        android:textColor="#C24229"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/itemImg1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product1" />

    <TextView
        android:id="@+id/detail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/itemImg1"
        android:text="รายละเอียด"
        android:textColor="#826f5f"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_detail"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/detail_header"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/itemImg1"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxssss"
        android:textColor="#826f5f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/baht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_detail"
        android:layout_toRightOf="@+id/itemImg1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="฿"
        android:textColor="#FFCC79"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_detail"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@id/baht"
        android:text="0000"
        android:textColor="#FFCC79"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMinus"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/itemPrice"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/itemImg1"
        android:background="@drawable/login_btn"
        android:drawableLeft="@drawable/remove_icon"
        android:paddingLeft="13dp"
        />

    <TextView
        android:id="@+id/itemAmount"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/itemPrice"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/btnMinus"
        android:background="#f2f2ec"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#826f5f"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPlus"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/itemPrice"
        android:layout_toRightOf="@id/itemAmount"
        android:background="@drawable/login_btn"
        android:drawableLeft="@drawable/add_icon"
        android:paddingLeft="13dp" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.85dp"
        android:layout_below="@id/btnMinus"
        android:layout_marginTop="20dp"
        android:background="#ADADAD" />
</RelativeLayout>