<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_Product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/product1"
        android:background="#1DFFCC79"
        />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#826c5f"
        android:text="กำไล มินิมอล"
        android:layout_below="@id/img_Product"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="1200฿"
        android:textColor="#ffcc79"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_descriptionplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="รายละเอียดสินค้า"
        android:textColor="#826c5f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_descriptionplus"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="กำไล มินิมอล เป็นสินค้านำเข้า"
        android:textColor="#826c5f"
        android:textSize="20sp" />


</RelativeLayout>
