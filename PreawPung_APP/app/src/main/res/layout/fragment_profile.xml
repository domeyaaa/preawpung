<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".Fragments.ProfileFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/editProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:paddingRight="20dp"
                android:src="@drawable/edit_icon" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:src="@drawable/profile_icon" />

            <TextView
                android:id="@+id/usernameProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Phongphanit Senaphak"
                android:textColor="#826c5f"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp">

                <TextView
                    android:id="@+id/emailtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20dp"
                    android:text="อีเมล :"
                    android:textColor="#826c5f"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/birthtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailtxt"
                    android:layout_marginBottom="20dp"
                    android:text="วัน/เดือน/ปีเกิด :"
                    android:textColor="#826c5f"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gendertxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/birthtxt"
                    android:layout_marginBottom="20dp"
                    android:text="เพศ :"
                    android:textColor="#826c5f"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teltxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gendertxt"
                    android:layout_marginBottom="20dp"
                    android:text="เบอร์โทร :"
                    android:textColor="#826c5f"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teltxt"
                    android:text="ที่อยู่ :"
                    android:textColor="#826c5f"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxx"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/birthdayProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailProfile"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:text="xxxxxxxxx"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/genderProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/birthdayProfile"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:text="xxxxx"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/telProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/genderProfile"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:text="xxxxxxxxxxxxxxxx"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/addressProfile"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/telProfile"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginBottom="20dp"
                    android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxx"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/logout"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/login_btn"
                    android:text="ออกจากระบบ"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.appcompat.widget.LinearLayoutCompat>